{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user account within the application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the User entity (matches Firebase Auth UID)."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "description": "URL of the user's profile picture."
        },
        "createdAt": {
          "type": "string",
          "description": "The date and time the user account was created.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "email",
        "displayName",
        "createdAt"
      ]
    },
    "Email": {
      "title": "Email",
      "type": "object",
      "description": "Represents an email message.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Email entity."
        },
        "fromName": {
          "type": "string"
        },
        "fromEmail": {
          "type": "string"
        },
        "to": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "subject": {
          "type": "string"
        },
        "body": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "read": {
          "type": "boolean"
        },
        "mailbox": {
          "type": "string",
          "enum": ["inbox", "sent", "trash", "spam"]
        }
      },
      "required": [
        "id",
        "fromName",
        "fromEmail",
        "to",
        "subject",
        "body",
        "date",
        "read",
        "mailbox"
      ]
    },
    "SecurityEvent": {
      "title": "SecurityEvent",
      "type": "object",
      "description": "Represents a security-related event.",
      "properties": {
        "id": {
          "type": "string"
        },
        "action": {
          "type": "string",
          "enum": ["send", "decrypt"]
        },
        "outcome": {
          "type": "string",
          "enum": ["success", "failure"]
        },
        "reason": {
          "type": "string",
          "enum": ["unauthorized", "session_expired", "session_reused", "not_found"]
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "emailId": {
          "type": "string"
        },
        "emailSubject": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "action",
        "outcome",
        "timestamp",
        "emailId",
        "emailSubject"
      ]
    }
  },
  "auth": {
    "providers": [
      "google.com"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/backend/entities/User"
          },
          "description": "Stores user profiles."
        }
      },
      {
        "path": "/users/{userId}/emails/{emailId}",
        "definition": {
          "entityName": "Email",
          "schema": {
            "$ref": "#/backend/entities/Email"
          },
          "description": "Stores emails for a user."
        }
      },
      {
        "path": "/users/{userId}/securityEvents/{eventId}",
        "definition": {
          "entityName": "SecurityEvent",
          "schema": {
            "$ref": "#/backend/entities/SecurityEvent"
          },
          "description": "Stores security events for a user."
        }
      }
    ]
  }
}
