rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Allow signed-in users to list all user profiles for the dashboard
      allow list: if isSignedIn();
      // Allow a user to read and write their own profile
      allow read, write: if isOwner(userId);

      // Emails subcollection
      match /emails/{emailId} {
        allow read, list, create, update, delete: if isOwner(userId);
      }

      // SecurityEvents subcollection (for direct access)
      match /securityEvents/{eventId} {
        allow read, create: if isOwner(userId);
      }
    }
    
    // Allow collection group query for security events by any signed-in user
    match /{path=**}/securityEvents/{eventId} {
      allow list: if isSignedIn();
    }
  }
}
